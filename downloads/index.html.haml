  %section.span6
    %header
      %h3
        #{devstudio_current_stable_release.build_info.name} #{devstudio_current_stable_release.build_info.version}
        - unless devstudio_current_stable_release.build_info.build_type_label.nil?
          %span{:class=>"label label_#{devstudio_current_stable_release.build_info.build_type_label}"}
            #{site.labels[devstudio_current_stable_release.build_info.build_type_label]}
